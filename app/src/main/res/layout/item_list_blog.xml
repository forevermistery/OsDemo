<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/blog_img_and_text"

        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--<TextView-->
        <!--android:id="@+id/img_tag"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:background="@drawable/tag"/>-->
        <TextView

            android:textSize="20sp"
            android:id="@+id/blog_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"


            android:text="title" />
    </RelativeLayout>


    <TextView
        android:id="@+id/blog_xiangqing"
        android:text="详情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/date_and_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="8dp"
            android:text="2019-01-03"
            android:id="@+id/blog_Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0026"
            android:layout_weight="0"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:text="1小时前"
            android:id="@+id/blog_date_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#878787"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/blog_numberOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20"
            android:textAlignment="textEnd" />

    </LinearLayout>
    <TextView
        android:autoLink="all"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="24sp" />
</LinearLayout>