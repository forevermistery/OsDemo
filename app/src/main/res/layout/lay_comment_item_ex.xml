<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag"
            android:scaleType="fitCenter"
            app:riv_corner_radius="10dip"
            app:riv_border_width="1dip"
            app:riv_border_color="#333333"
            app:riv_oval="false" />
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_weight="1">
              <TextView
                  android:id="@+id/tv_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="年轻的小蜜蜂"
                  android:textColor="#111111"
                  android:textSize="14sp" />
              <TextView
                  android:id="@+id/tv_pub_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="12楼  6分钟前"
                  android:textColor="#6a6a6a"
                  android:textSize="12sp"
                  />

          </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_double_image"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/btn_comment"
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_comment_30" />
        <ImageView
            android:id="@+id/iv_best_answer"
            android:scaleType="fitCenter"
            android:src="@mipmap/label_best_answer"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="16sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.administrator.osdemo.oschina.FloorView
            android:id="@+id/ly_refer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="visible">
         <com.example.administrator.osdemo.oschina.TweetTextView
             android:id="@+id/tv_content"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="4dp"
             android:layout_marginTop="8dp"
             android:paddingLeft="16dp"
             android:text="内容"
             android:textColor="#111111"
             android:textSize="14sp"
             />




        </com.example.administrator.osdemo.oschina.FloorView>

    </LinearLayout>






</LinearLayout>